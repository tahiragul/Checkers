<Window x:Class="Checkers_TahiraKhan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkers_TahiraKhan"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Label Content="Checkers" HorizontalAlignment="Left" Margin="186,43,0,0" VerticalAlignment="Top" Width="124" Height="44" FontSize="28" FontWeight="Bold"/>
        <Button x:Name="btnpp" Content="Player vs Player" HorizontalAlignment="Left" Margin="205,104,0,0" VerticalAlignment="Top" Width="90" Click="HUMAN_VS_HUMAN_Click" Height="31"/>
        <Button x:Name="btnpAI" Content="Player vs AI" HorizontalAlignment="Left" Margin="205,160,0,0" VerticalAlignment="Top" Width="90" Click="HUMAN_VS_AI_Click" Height="31"/>
        <Button x:Name="btnAIAI" Content="AI vs AI" HorizontalAlignment="Left" Margin="205,213,0,0" VerticalAlignment="Top" Width="90" Click="AI_VS_AI_Click" Height="31"/>
    </Grid>
</Window>
